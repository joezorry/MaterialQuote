<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowExitTransitionOverlap">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorPrimary">#ff607d8b</item>
        <item name="android:colorPrimaryDark">#ff37474f</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowExitTransitionOverlap">true</item>
        <item name="android:colorPrimary">#ff607d8b</item>
        <item name="android:colorPrimaryDark">#ff37474f</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
</resources>
